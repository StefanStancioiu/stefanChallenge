<apex:page renderAs="pdf" controller="EmployeeController" tabStyle="Employee__c">
    <apex:stylesheet value="{!$Resource.pdfStyle}"/>
	<div align="right"><strong>Date</strong>: {!DAY(Today())} {!CASE(MONTH(Today()), 1, 'January', 2, 'February', 3, 'March', 4, 'April', 5, 'May', 6, 'June', 7, 'July', 8, 'August', 9, 'September', 10, 'October', 11, 'November', 12, 'December', 'Unknown')} {!YEAR(Today())}</div>
	<div align="right"><strong>Generated By</strong>: {!$User.FirstName} {!$User.LastName}</div>
	<center>
		<h1>Generated PDF for {!emp.Name}</h1>
	</center>
	<table align="center" style="border: 1px solid #6699CC;">
		<tr>
			<td style="background-color: #6699CC; color: #FFFFFF; font-size: 200%; padding: 10px;">Employee Details</td>
			<td>
				<ul>
					<li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Name.label}" style="margin-right:10px" />
            			<apex:outputText value="{!emp.Name}"></apex:outputText>
                    </li>
                    <li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Department__c.label}" style="margin-right:10px" />
                        <apex:outputText value="{!emp.Department__r.Name}"></apex:outputText>
                    </li>
                    <li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Email__c.label}" style="margin-right:10px" />
                        <apex:outputText value="{!emp.Email__c}"></apex:outputText>
                    </li>
                    <li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Address__c.label}" style="margin-right:10px"/>
                        <apex:outputText value="{!emp.Address__c}"></apex:outputText>
                   	</li>
                    <li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Gender__c.label}" style="margin-right:10px" />
                        <apex:outputText value="{!emp.Gender__c}"></apex:outputText>
                    </li>
                    <li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Phone__c.label}" style="margin-right:10px" />
                        <apex:outputText value="{!emp.Phone__c}"></apex:outputText>
                    </li>
                    <li>
                        <apex:outputText value="{!$ObjectType.Employee__c.fields.Date_of_Birth__c.label}" style="margin-right:10px" />
                        <apex:outputText value="{0,date,MM'/'dd'/'yyyy}">
                            <apex:param value="{!emp.Date_of_Birth__c}" /> 
                        </apex:outputText>
                    </li>  
				</ul>
			</td>
		</tr>
	</table>
	<div style="color: #999999; font-size: 90%; margin-top: 15px;">
		<div>Created by: {!$User.FirstName} {!$User.LastName}</div>
        <div>Created date: {!NOW()}</div>
    </div>
</apex:page>